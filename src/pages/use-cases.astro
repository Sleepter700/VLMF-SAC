---
import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Button from '@components/ui/Button.astro';
import TestimonialCard from '@components/ui/TestimonialCard.astro';
import UseCaseTabs from '@components/react/UseCaseTabs';
import StatsCards from '@components/react/StatsCards';
import { Image } from 'astro:assets';

import ecommerceImg from '@assets/photo-1607082349566-187342175e2f.jpg';
import healthcareImg from '@assets/photo-1587854692152-cbe660dbde88.jpg';
import automotiveImg from '@assets/photo-1581091226825-a6a2a5aee158.jpg';
import technologyImg from '@assets/photo-1518770660439-4636190af475.jpg';
import consumerGoodsImg from '@assets/photo-1558618666-fcd25c85cd64.jpg';
import foodBeverageImg from '@assets/photo-1542838132-92c53300491e.jpg';

import testimonial1Img from '@assets/photo-1494790108377-be9c29b29330.jpg';
import testimonial2Img from '@assets/photo-1559839734-2b71ea197ec2.jpg';
import testimonial3Img from '@assets/photo-1507003211169-0a1dd7228f2d.jpg';

import heroBgImg from '@assets/photo-1551288049-bebda4e38f71.jpg';
import ctaBgImg from '@assets/photo-1553413077-190dd305871c.jpg';

const useCases:any[] = [
  {
    industry: 'Comercio Electrónico y Minorista',
    iconName: 'ShoppingCart',
    image: ecommerceImg,
    challenge: 'Gestionar pedidos de alto volumen durante temporadas pico con ventanas de entrega ajustadas y expectativas de los clientes para un cumplimiento rápido y preciso.',
    solution: 'Almacenamiento escalable con procesamiento automatizado de pedidos, capacidades de envío el mismo día e integración de gestión de devoluciones.',
    results: [
      '40% reducción en el tiempo de procesamiento de pedidos',
      '99.5% tasa de precisión en pedidos',
      '2 días tiempo promedio de entrega',
      '95% puntuación de satisfacción del cliente'
    ]
  },
  {
    industry: 'Salud y Farmacéuticos',
    iconName: 'Heart',
    image: healthcareImg,
    challenge: 'Mantener controles estrictos de temperatura, cumplimiento regulatorio y cadena de custodia para productos médicos sensibles y farmacéuticos.',
    solution: 'Instalaciones climatizadas conformes con FDA con logística de cadena fría validada, monitoreo en tiempo real y registros de auditoría completos.',
    results: [
      '100% cumplimiento regulatorio',
      'Cero excursiones de temperatura',
      'Trazabilidad completa de lotes',
      'Reducción de residuos en un 30%'
    ]
  },
  {
    industry: 'Automotriz y Manufactura',
    iconName: 'Car',
    image: automotiveImg,
    challenge: 'Coordinar entregas justo a tiempo de componentes en múltiples plantas de fabricación mientras se minimizan los costos de mantenimiento de inventario.',
    solution: 'Centros de distribución estratégicos cerca de las instalaciones de producción, logística de recorridos y gestión predictiva de inventario.',
    results: [
      '50% reducción en costos de inventario',
      '99.8% entrega a tiempo',
      'Cero paradas en líneas de producción',
      'Mejora en el flujo de efectivo'
    ]
  },
  {
    industry: 'Tecnología y Electrónicos',
    iconName: 'Laptop',
    image: technologyImg,
    challenge: 'Manejo seguro de electrónicos de alto valor, logística inversa eficiente para devoluciones y gestión rápida del ciclo de vida del producto.',
    solution: 'Entornos protegidos contra ESD, cadena de custodia segura, procesamiento simplificado de devoluciones y programas de recuperación de activos.',
    results: [
      'Cero incidentes de seguridad',
      'Procesamiento de devoluciones en 48 horas',
      '85% tasa de recuperación de activos',
      'Reducción de merma en un 60%'
    ]
  },
  {
    industry: 'Bienes de Consumo',
    iconName: 'Package',
    image: consumerGoodsImg,
    challenge: 'Gestionar portafolios de productos diversos con vidas útiles variables, campañas promocionales y fluctuaciones estacionales de demanda.',
    solution: 'Almacenamiento multi-cliente, gestión de inventario FEFO, servicios de etiquetado promocional y distribución impulsada por demanda.',
    results: [
      '35% mejora en la rotación de stock',
      'Reducción de deterioro en un 45%',
      '3 días tiempo de respuesta promocional',
      'Escalado flexible de capacidad'
    ]
  },
  {
    industry: 'Alimentos y Bebidas',
    iconName: 'UtensilsCrossed',
    image: foodBeverageImg,
    challenge: 'Mantener estándares de seguridad alimentaria, gestionar perecederos y asegurar cumplimiento con regulaciones HACCP y FDA.',
    solution: 'Instalaciones conformes con FSMA, almacenamiento zonificado por temperatura, seguimiento de lotes y transporte refrigerado especializado.',
    results: [
      '100% cumplimiento de seguridad alimentaria',
      '2% tasa de pérdida de producto',
      'Capacidad completa de retiro de lotes',
      'Frescura extendida del producto'
    ]
  }
];

const testimonials:any[] = [
  {
    quote: "La solución de almacenamiento automatizado de AstroFlow transformó nuestras operaciones de comercio electrónico. Redujimos el tiempo de procesamiento de pedidos en un 40% y logramos una precisión del 99.5%. Sus capacidades de envío el mismo día nos ayudaron a competir con gigantes de la industria.",
    name: "Sarah Mitchell",
    role: "VP de Operaciones, TechRetail",
    image: testimonial1Img,
    ringColor: "ring-red-200"
  },
  {
    quote: "Su logística de cadena fría conforme con FDA es excepcional. Hemos mantenido un 100% de cumplimiento regulatorio con cero excursiones de temperatura. El monitoreo en tiempo real y los registros de auditoría completos nos dan total confianza.",
    name: "Dr. James Chen",
    role: "Director, PharmaLogistics",
    image: testimonial2Img,
    ringColor: "ring-teal-200"
  },
  {
    quote: "Entrega justo a tiempo con un rendimiento a tiempo del 99.8% y cero paradas en producción. Sus centros de distribución estratégicos y gestión predictiva de inventario redujeron nuestros costos de inventario en un 50%.",
    name: "Robert Johnson",
    role: "Gerente de Operaciones, AutoParts Co.",
    image: testimonial3Img,
    ringColor: "ring-red-200"
  }
];
---

<BaseLayout title="Casos de Uso - Soluciones Industriales">
  <!-- Hero Section -->
  <section class="relative h-[70vh] min-h-[500px] flex items-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <Image 
        src={heroBgImg}
        alt="Industry solutions and use cases"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-linear-to-r from-slate-900/95 via-slate-900/80 to-slate-900/50"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center px-4 py-2 mb-6 bg-linear-to-r from-red-600 to-teal-600 text-white text-sm font-semibold rounded-full shadow-lg">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
          Soluciones Industriales
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
          Casos de Uso <span class="text-transparent bg-clip-text bg-linear-to-r from-red-400 via-teal-400 to-red-400">
            Industriales
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-3xl mx-auto leading-relaxed">
          Soluciones del mundo real que ofrecen resultados medibles en diversas industrias.
          Vea cómo hemos transformado las operaciones.
        </p>
      </div>
    </div>
  </section>

  <!-- Use Cases with Tabs -->
  <Section background="gray">
    <UseCaseTabs useCases={useCases} client:load />
  </Section>

  <!-- Success Metrics -->
  <Section background="white">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Resultados <span class="gradient-text">Probados</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Nuestro historial habla por sí mismo con mejoras medibles en indicadores clave de rendimiento.
      </p>
    </div>

    <StatsCards
      stats={[
        { value: '99.8%', label: 'Entrega a Tiempo', iconName: 'CheckCircle2' },
        { value: '45%', label: 'Ahorro Promedio de Costos', iconName: 'TrendingDown' },
        { value: '500+', label: 'Clientes Satisfechos', iconName: 'Users' },
        { value: '50M+', label: 'Unidades Enviadas', iconName: 'Package' }
      ]}
      client:load
    />
  </Section>

  <!-- Testimonials Section -->
  <Section background="gray">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-red-100 text-red-800 text-sm font-semibold rounded-full">
        Historias de Éxito de Clientes
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Confiado por <span class="gradient-text">Líderes de la Industria</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Vea cómo hemos ayudado a empresas en diferentes industrias a transformar sus operaciones y lograr resultados notables.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <TestimonialCard testimonial={testimonial} />
      ))}
    </div>
  </Section>

  <!-- CTA Section -->
  <section class="relative py-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <Image 
        src={ctaBgImg}
        alt="Let's work together"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-linear-to-r from-red-900/95 to-teal-900/95"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center text-white">
        <div class="inline-block px-4 py-2 mb-6 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full">
          Comienza Hoy
        </div>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          ¿Listo para Transformar Tus <span class="text-transparent bg-clip-text bg-linear-to-r from-red-400 to-teal-400">Operaciones</span>?
        </h2>
        <p class="text-xl md:text-2xl text-slate-200 mb-12 max-w-2xl mx-auto leading-relaxed">
          Cada industria tiene requisitos únicos. Permítenos crear una solución personalizada para tu negocio.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <Button href="/rfq" size="lg" class="bg-red-600! hover:bg-red-700! text-white! shadow-2xl!">
            Solicitar Cotización
          </Button>
          <Button href="/capabilities" size="lg" variant="outline" class="border-2! border-white! text-white! hover:bg-white/10! shadow-2xl!">
            Ver Capacidades
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>


