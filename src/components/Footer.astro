---
import { NAVIGATION, SOCIAL_LINKS, SITE } from '@config/site';
import { Linkedin, Twitter, Facebook } from 'lucide-react';
import { Image } from 'astro:assets';
import vlmfLogo from '@assets/LOGO-VLM.png';
---

<footer class="bg-slate-800 text-slate-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-1 space-y-6">
        <a href="/" class="flex items-center space-x-3 group">
          <Image
            src={vlmfLogo}
            alt="VLM&F Asociados"
            class="h-12 w-auto object-contain"
          />
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>
        <div class="flex space-x-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-red-600 hover:text-white transition-all"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.twitter}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-red-400 hover:text-white transition-all"
            aria-label="Twitter"
          >
            <Twitter className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.facebook}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-red-500 hover:text-white transition-all"
            aria-label="Facebook"
          >
            <Facebook className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Enlaces Rápidos
        </h3>
        <ul class="space-y-3">
          {NAVIGATION.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-slate-400 hover:text-red-400 transition-colors inline-flex items-center group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-red-400 transition-all mr-0 group-hover:mr-2"></span>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Servicios
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-red-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-red-400 transition-all mr-0 group-hover:mr-2"></span>
              Almacenamiento y Depósito
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-red-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-red-400 transition-all mr-0 group-hover:mr-2"></span>
              Transporte
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-red-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-red-400 transition-all mr-0 group-hover:mr-2"></span>
              Fabricación
            </a>
          </li>
          <li>
            <a href="/capabilities" class="text-sm text-slate-400 hover:text-red-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-red-400 transition-all mr-0 group-hover:mr-2"></span>
              Gestión de la Cadena de Suministro
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          Comenzar
        </h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a href="/rfq" class="text-slate-400 hover:text-red-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-red-400 transition-all mr-0 group-hover:mr-2"></span>
              Solicitar una Cotización
            </a>
          </li>
          <li>
            <a href="/facilities" class="text-slate-400 hover:text-red-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-red-400 transition-all mr-0 group-hover:mr-2"></span>
              Encontrar una Instalación
            </a>
          </li>
          <li>
            <a href="/documentation" class="text-slate-400 hover:text-red-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-red-400 transition-all mr-0 group-hover:mr-2"></span>
              Documentación
            </a>
          </li>
        </ul>
        
        <div class="mt-8">
          <a
            href="/rfq"
            class="inline-flex items-center px-6 py-3 text-sm font-semibold text-white bg-linear-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 rounded-lg shadow-lg hover:shadow-xl transition-all"
          >
            Comenzar
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-slate-800">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <p class="text-sm text-slate-400">
          &copy; {new Date().getFullYear()} {SITE.author}. Todos los derechos reservados.
        </p>
        <div class="flex items-center space-x-6 text-sm">
          <a href="/" class="text-slate-400 hover:text-red-400 transition-colors">
            Política de Privacidad
          </a>
          <span class="text-slate-700">•</span>
          <a href="/" class="text-slate-400 hover:text-red-400 transition-colors">
            Términos de Servicio
          </a>
          <span class="text-slate-700">•</span>
          <a href="/" class="text-slate-400 hover:text-red-400 transition-colors">
            Política de Cookies
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

