---
import { Image } from 'astro:assets';
import techDashboardImg from '@assets/photo-1551288049-bebda4e38f71.jpg';

interface Technology {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
}

const technologies: Technology[] = [
  {
    title: "Infraestructura Estructural",
    description: "Diseño de esqueletos robustos con ingeniería de grandes luces, eliminando columnas intermedias para maximizar el espacio libre operativo.",
    iconGradient: "from-red-500 to-red-600",
    iconPath: "M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
  },
  {
    title: "Especialistas en Naves",
    description: "Expertos en el montaje de naves industriales de alta complejidad, garantizando una ejecución milimétrica en estructuras de gran envergadura.",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath: "m17 3 3 3-14.5 14.5-1.5-1.5L17 3ZM11 9l1.5 1.5M15 5l1.5 1.5M7 13l1.5 1.5M9 11l1.5 1.5M13 7l1.5 1.5"
  },
  {
    title: "Galpones de Alta Complejidad",
    description: "Soluciones estructurales para entornos críticos, integrando sistemas de carga pesada y optimización ambiental dentro del diseño.",
    iconGradient: "from-red-500 to-red-600",
    iconPath: "M3 21V7l9-4 9 4v14M3 10h18M5 21V12h3v9m6 0v-9h3v9"
  },
  {
    title: "Respaldo Operativo Total",
    description: "Gestión integral de obra que asegura la continuidad del proyecto bajo los más estrictos estándares internacionales de seguridad.",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath: "M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10zM9 12l2 2 4-4"
  }
];
---

<section class="py-24 bg-linear-to-b from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <div class="inline-block px-4 py-2 mb-4 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full">
          Potencia Estructural
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Impulsado por <span class="text-transparent bg-clip-text bg-linear-to-r from-red-400 to-red-600">Ingeniería de Vanguardia</span>
        </h2>
        <p class="text-xl text-slate-300 mb-8 leading-relaxed">
          Nuestra capacidad operativa se sustenta en infraestructuras de alta complejidad, diseñadas para optimizar el flujo logístico y soportar 
          los desafíos de la industria pesada en tiempo real.
        </p>

        <!-- Technology Features -->
        <div class="space-y-6">
          {technologies.map((tech) => (
            <div class="flex items-start group">
              <div class={`shrink-0 w-12 h-12 rounded-lg bg-linear-to-br ${tech.iconGradient} flex items-center justify-center mr-4 group-hover:scale-110 transition-transform`}>
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={tech.iconPath} />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white mb-2">{tech.title}</h3>
                <p class="text-slate-400 leading-relaxed">
                  {tech.description}
                </p>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA -->
        <!--<div class="mt-10">
          <a 
            href="/documentation" 
            class="inline-flex items-center px-6 py-3 text-base font-semibold text-white bg-linear-to-r from-red-600 to-teal-600 hover:from-red-700 hover:to-teal-700 rounded-lg shadow-lg hover:shadow-xl transition-all group"
          >
            Explora Nuestra Tecnología
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>-->
      </div>

      <!-- Visual -->
      <div class="relative">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <Image 
            src={techDashboardImg}
            alt="Advanced logistics technology dashboard"
            class="w-full h-full object-cover"
            width={1200}
            height={800}
          />
          <div class="absolute inset-0 bg-linear-to-br from-red-900/80 via-teal-900/60 to-red-900/80"></div>
          <div class="absolute inset-0 flex items-center justify-center p-8">
            <div class="text-center">
              <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-linear-to-br from-red-500 to-teal-500 flex items-center justify-center shadow-2xl">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-2">Ingeniería de Potencia Industrial</h3>
              <p class="text-slate-300">El respaldo físico que su operación necesita</p>
            </div>
          </div>
        </div>
        
        <!-- Floating Cards -->
        <div class="absolute -top-4 -right-4 bg-white rounded-lg p-4 shadow-xl z-20 animate-pulse">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-green-500 mr-2"></div>
            <span class="text-sm font-semibold text-slate-900">Precisión de Montaje</span>
          </div>
        </div>
        <div class="absolute -bottom-4 -left-4 bg-white rounded-lg p-4 shadow-xl z-20 animate-pulse" style="animation-delay: 0.5s;">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-red-500 mr-2"></div>
            <span class="text-sm font-semibold text-slate-900">Resistencia Certificada</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



